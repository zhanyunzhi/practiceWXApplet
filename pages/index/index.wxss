/**index.wxss**/
.slide-image{
  width: 100%;
  height:100%;
}
.slide-text{
  position: absolute;
  color: #ffffff;
   width:710rpx; 
  background-color: rgba(0,0,0,.5);
  bottom:0;
  font-size: 28rpx;
  line-height:50rpx;
  padding:0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2rpx;
}
.content{
  padding-top: 30rpx;
}
.section{
  padding: 30rpx 30rpx 0;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  flex-wrap: wrap;
  align-items:flex-start;
}
.section view{
  width: 47%;
  text-align: center;
  color: #ffffff;
  font-size: 34rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.section .left{
  border-bottom-left-radius: 60rpx;
  border-top-left-radius: 60rpx;
}
.section .right{
  border-top-right-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
}
.bg-blue{
  background-color: #5c97bd;
}
.bg-green{
  background-color: #56bd8c;
}
.bg-orange{
  background-color: #ffc173;
}
.bg-purple{
  background-color: #878dfe;
}