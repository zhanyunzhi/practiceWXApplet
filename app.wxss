/**app.wxss**/
page{
  background-color:#f7f7f7;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.clearfix:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
/*公共footer的样式*/
.footer{
  display: flex;
  justify-content: space-around;
  flex-direction: row;
  flex-wrap: wrap;
  align-items:flex-start;
  position: fixed;
  bottom:0;
  left:0;
  width:100%;
  height:92rpx;
  font-size:28rpx;
  background-color: #ffffff;
  border-top: 1px solid #e6eaec;
}
.footer view{
  flex-direction: column;
  display: flex;
  align-items:center;
  justify-content: center;
  height:100%;
}
.footer .icon-home{
  width:34rpx;
}
.footer .icon-collect{
  width:36rpx;
}
.footer .icon-select-topic{
  width:32rpx;
}
.footer .icon-next{
  width:36rpx;
}

/* 弹出的题目选择框 */
.pop-up-box{
  width:100%;
  background-color: #f7f7f7;
  position: fixed;
  top: 0;
  left: 0;
  padding-top: 40rpx;
  height:100%;
}
.serial-number{
  padding: 80rpx 9rpx 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #09bb07;
}
.serial-number text{
  width: 92rpx;
  line-height: 88rpx;
  margin: 0 15rpx 30rpx;
  text-align: center;
  color: #8b8889;
  border: 1px solid #d0d0d0;
  background-color: #e4e6e5;
  font-size: 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.serial-number .active{
  color: #09bb07;
  border: 1px solid #09bb07;
  background-color: rgba(9,187,7,.1);
}
.serial-number .label{
  font-size: 24rpx;
  background-color: rgba(9,187,7,1);
  color: #ffffff;
  position: absolute;
  margin-top: -60rpx;
  margin-left: -9rpx;
  padding: 2rpx 10rpx;
}
.pop-close{
  position: fixed;
  top: 20rpx;
  right:40rpx;
  font-size: 34rpx;
}
